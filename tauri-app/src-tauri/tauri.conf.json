{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SoupModMaker",
  "version": "0.1.0",
  "identifier": "com.soupmodmaker.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "SoupModMaker - Modern Minecraft Mod Creator",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": null,
      "nsis": null
    }
  },
  "plugins": {
    "shell": {
      "scope": [
        {
          "name": "gradlew",
          "cmd": "gradlew.bat",
          "args": true,
          "sidecar": false
        },
        {
          "name": "gradlew-unix",
          "cmd": "gradlew",
          "args": true,
          "sidecar": false
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": ["/C", "gradlew.bat", "build"],
          "sidecar": false
        },
        {
          "name": "sh",
          "cmd": "sh",
          "args": ["-c", "./gradlew build"],
          "sidecar": false
        }
      ]
    }
  }
}
