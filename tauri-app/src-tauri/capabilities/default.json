{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:path:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-stat",
    "fs:allow-copy-file",
    "fs:default",
    "shell:allow-execute",
    "shell:allow-open",
    {
      "identifier": "fs:scope",
      "allow": ["**"],
      "deny": []
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "gradlew-windows",
          "cmd": "cmd",
          "args": ["/C", "echo Executing Gradle wrapper... && gradlew.bat", "$ARGS"]
        },
        {
          "name": "gradlew-unix",
          "cmd": "sh",
          "args": ["-c", "echo Executing Gradle wrapper... && ./gradlew $ARGS"]
        }
      ]
    }
  ]
}
